{
	"name": "pl_pitstop",
	"properties": {
		"activities": [
			{
				"name": "copy_act_pitstop",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"QueryParameters.pageoffset": "RANGE:1:1200:30"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['season']"
								},
								"sink": {
									"ordinal": 1
								}
							},
							{
								"source": {
									"path": "['round']"
								},
								"sink": {
									"ordinal": 2
								}
							},
							{
								"source": {
									"path": "['raceName']"
								},
								"sink": {
									"ordinal": 3
								}
							},
							{
								"source": {
									"path": "['Circuit']['circuitId']"
								},
								"sink": {
									"ordinal": 4
								}
							},
							{
								"source": {
									"path": "['Circuit']['circuitName']"
								},
								"sink": {
									"ordinal": 5
								}
							}
						],
						"collectionReference": "$['MRData']['RaceTable']['Races']"
					}
				},
				"inputs": [
					{
						"referenceName": "ds_pitstops",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_pitsop",
						"type": "DatasetReference"
					}
				]
			}
		],
		"variables": {
			"round": {
				"type": "String"
			},
			"season": {
				"type": "String"
			}
		},
		"folder": {
			"name": "ignition"
		},
		"annotations": []
	}
}