{
	"name": "pl_pitstop",
	"properties": {
		"activities": [
			{
				"name": "copy_act_pitstop",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET",
						"paginationRules": {
							"QueryParameters.pageoffset": "RANGE"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['season']"
								},
								"sink": {
									"ordinal": 1
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['round']"
								},
								"sink": {
									"ordinal": 2
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['url']"
								},
								"sink": {
									"ordinal": 3
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['raceName']"
								},
								"sink": {
									"ordinal": 4
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['circuitId']"
								},
								"sink": {
									"ordinal": 5
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['url']"
								},
								"sink": {
									"ordinal": 6
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['circuitName']"
								},
								"sink": {
									"ordinal": 7
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['Location']['lat']"
								},
								"sink": {
									"ordinal": 8
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['Location']['long']"
								},
								"sink": {
									"ordinal": 9
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['Location']['locality']"
								},
								"sink": {
									"ordinal": 10
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['Circuit']['Location']['country']"
								},
								"sink": {
									"ordinal": 11
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['date']"
								},
								"sink": {
									"ordinal": 12
								}
							},
							{
								"source": {
									"path": "$['MRData']['RaceTable']['Races'][0]['time']"
								},
								"sink": {
									"ordinal": 13
								}
							}
						],
						"collectionReference": "$['MRData']['RaceTable']['Races']"
					}
				},
				"inputs": [
					{
						"referenceName": "ds_pitstops",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ds_pitsop",
						"type": "DatasetReference"
					}
				]
			}
		],
		"variables": {
			"round": {
				"type": "String"
			},
			"season": {
				"type": "String"
			}
		},
		"folder": {
			"name": "ignition"
		},
		"annotations": []
	}
}